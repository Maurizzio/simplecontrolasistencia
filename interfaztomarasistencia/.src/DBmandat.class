            'wtable["Modalidad"] = wdata[Modalidad] ' Modalidad VARCHAR(60)Null Default Null, - - casa, base, periodo prueba, temporal, interno para determinar horario extendido
            'wtable["FSVacac"] = wdata[FSVacac] ' FSVacac VARCHAR(60)Null Default Null, - - fecha inicio de vacaciones, necesario para verificaciones
            'wtable["FRVacac"] = wdata[FRVacac] ' FRVacac VARCHAR(60)Null Default Null, - - fecha fin de vacaciones, necesario para ver si el tipo falto al reincorporarse
            'wtable["FSSuspen"] = wdata[FSSuspen] ' FSSuspen VARCHAR(60)Null Default Null, - - fecha inicio de suspendido, necesario para verificaciones
            'wtable["FRSuspen"] = wdata[FRSuspen] ' FRSuspen VARCHAR(60)Null Default Null, - - fecha fin de suspendido, necesario para verificaciones
            'wtable["Turno"] = wdata[Turno] ' Turno VARCHAR(60)Null Default Null, - - manana tarde noche, fin semana... necesario apra que no salga antes de time
            wtable["Cedula"] = wdata[5] 'wdata[Cedula] ' Cedula VARCHAR(12)Null Default Null, - - cedula con el simbolo de nacionalidad separado popr guion, solo Venezuela
            wtable["Cedu"] = wdata[6] 'wdata[Cedu] ' Cedu VARCHAR(12)Null Default Null, - - numero unico del trabajador, en venezuela la cedula
            'wtable["ApeNomC"] = wdata[ApeNomC] ' ApeNomC VARCHAR(60)Null Default Null, - - apellido y nombre, primero de cada uno separado por espacio
            wtable.Update
            dummycont = dummycont + 1
        Wend
        hconn.Commit
        hFile.Close
    Endif

End

'' empleada para verificar el correcto seguimiento de inicio de la gestin de datos, con true, cada proceso extra no fallaria
Public Sub isConected() As Integer

    Return hconniscon ' getconection establece esto a true si hay una coneccion activa

End
