            wtable["CODGER"] = wdata[CODGER] ' CODGER VARCHAR(60) Default Null, - - brinda info del lugar donde debe trabajar
            wtable["CODDEP"] = wdata[CODDEP] ' CODDEP VARCHAR(60) Default Null, - - codigo interno para verificacion y auditoria
            wtable["FICHA"] = wdata[FICHA] ' FICHA VARCHAR(10)Null Default Null, - - identificador o licencia conducir, cedula sin letra de nacionalidad en caso Venezuela
