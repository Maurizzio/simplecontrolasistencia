                Endif
                If wdata[icols] == "FICHA" Then
                    FICHA = icols
                Endif
            Next
            dummycont = dummycont + 1
        'Endif
        ' leyendola primera columna, leemos el resto
        hconn.Begin
        Seek #hFile, dummycont
        While Not Eof(hFile)
            Line Input #hFile, wline
